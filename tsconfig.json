{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "public",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "tests/*": ["../tests/*"]
    }
  }
}